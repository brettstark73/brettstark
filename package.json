{
  "name": "quality-automation-template",
  "version": "1.0.0",
  "description": "Reusable quality automation setup with GitHub Actions, Husky, lint-staged, and Prettier",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "dev": "hugo server -D",
    "dev:full": "hugo server -D --disableFastRender",
    "build": "hugo --gc --minify",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint . --ext .js,.jsx,.mjs,.cjs && stylelint \"assets/**/*.{css,scss,sass,less,pcss}\" --allow-empty-input",
    "test": "echo 'Add your testing command here'",
    "setup": "node setup.js",
    "security:audit": "npm audit --audit-level high",
    "security:secrets": "node -e \"const fs=require('fs');const content=fs.readFileSync('package.json','utf8');if(/[\\\"\\'][a-zA-Z0-9+/]{20,}[\\\"\\']/.test(content)){console.error('❌ Potential hardcoded secrets in package.json');process.exit(1)}else{console.log('✅ No secrets detected in package.json')}\"",
    "lighthouse:ci": "lhci autorun",
    "lighthouse:upload": "lhci upload",
    "lint:fix": "eslint . --ext .js,.jsx,.mjs,.cjs --fix && stylelint \"assets/**/*.{css,scss,sass,less,pcss}\" --fix --allow-empty-input",
    "images:optimize": "bash scripts/optimize-images.sh",
    "images:optimize:post": "bash scripts/optimize-images.sh",
    "seo:fix": "bash scripts/bulk-seo-fix.sh",
    "tags:enhance": "bash scripts/enhance-tags.sh"
  },
  "keywords": [
    "quality",
    "automation",
    "prettier",
    "husky",
    "lint-staged",
    "github-actions",
    "template"
  ],
  "author": "Brett Stark",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@lhci/cli": "^0.14.0",
    "eslint": "^9.38.0",
    "eslint-plugin-security": "^3.0.1",
    "globals": "^15.9.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^37.0.0"
  },
  "lint-staged": {
    "package.json": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write"
    ],
    "**/*.{html,css,scss}": [
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "**/*.{js,jsx,mjs,cjs,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "assets/**/*.{css,scss,sass,less,pcss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "public/**/*.{css,scss,sass,less,pcss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "themes/**/*.{css,scss,sass,less,pcss}": [
      "stylelint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "volta": {
    "node": "20.11.1",
    "npm": "10.2.4"
  }
}
